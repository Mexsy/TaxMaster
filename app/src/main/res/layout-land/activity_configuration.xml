<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorTheme"
    tools:context="synergy.eclectic.com.taxmaster.ConfigureTeam"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cofig"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_marginBottom="10dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.14"></FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/single_user"
                        android:layout_width="220dp"
                        android:layout_height="110dp"
                        android:contentDescription="Single User"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:onClick="onImageClick"
                        android:src="@drawable/user_icon"
                        android:layout_weight="0.57" />

                    <FrameLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reg_single"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/multi_user"
                        android:layout_width="220dp"
                        android:layout_height="148dp"
                        android:layout_gravity="center"
                        android:contentDescription="Single User"
                        android:onClick="onImageClick"
                        android:src="@drawable/multy_user" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reg_team"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
